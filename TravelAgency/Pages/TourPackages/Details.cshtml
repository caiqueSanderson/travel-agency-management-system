@page
@model TravelAgency.Pages.TourPackages.DetailsModel

@{
	ViewData["Title"] = "Detalhes do Pacote Turístico";
}

<div class="card">
	<h1>Detalhes do Pacote Turístico</h1>
	<hr />

	<dl class="row">
		<dt class="col-sm-2">
			Nome do Pacote
		</dt>
		<dd class="col-sm-10">
			@Model.TourPackage.Title
		</dd>
		<dt class="col-sm-2">
			Data de Início
		</dt>
		<dd class="col-sm-10">
			@Model.TourPackage.StartDate.ToString("dd/MM/yyyy")
		</dd>
		<dt class="col-sm-2">
			Capacidade Máxima
		</dt>
		<dd class="col-sm-10">
			@Model.TourPackage.MaxCapacity
		</dd>
		<dt class="col-sm-2">
			Preço
		</dt>
		<dd class="col-sm-10">
			@Model.TourPackage.Price.ToString("C", System.Globalization.CultureInfo.CurrentCulture)
		</dd>
	</dl>

	<div>
		<a asp-page="./Edit" asp-route-id="@Model.TourPackage.Id" class="btn btn-warning">
			<i class="bi bi-pencil"></i> Editar
		</a>
		<a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
	</div>
</div>

